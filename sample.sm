@@template box($width, $height) {
  width: $width;
  height: $height;
  
  &.doubled {
    width: $width * 2;
    height: $height * 2;
  }
}

div {
  @@use box(300px, 250px);
  
  &.special-case {
    @@use box(800px, 270px);
    
    background ({
      color: red;
      image: url(bg.png);
      position: top left;
    })
    
    a {
      text {{
        decoration: none;
        align: right;
      }}
    }
  }
}
