@@template boxextras() {
  &.info { background-color: yellow; }
  &.warning { background-color: red; }
  &.transparent { opacity: 0.5; }
}

@@template box($width, $height, $bgcolor, $bordercolor) {
  width: $width;
  height: $height;
  border: 1px solid $bordercolor;
  background-color: $bgcolor;
  @@use boxextras();
}
