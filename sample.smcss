@@template box-model($width, $color) {
  color: $color;
  width: $width;
  border: 1px outset $color;
  &.question { border-width: 3px; }
  &.info { border-width: 2px; }
}

p {
  line-height: 20px;
  width: 400px;
  @@use box-model(200px, blue);
  height: 800px;
}

div { @@use box-model(480px, red); }
